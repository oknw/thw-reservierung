<h1>Reservierung / Verleih</h1>
<% if @type%>
	<h2><%= @type %></h2>
<% end %>
<p>
<% form_for @search, :url => rentals_url, :method => 'post' do |form|%>
	<%= form.check_box :show_history, :onchange => "$$('.edit_search').first().submit()"%> Zeige History | 
	Sortieren <%= form.select :order, Search.search_keys, {}, :onchange =>"$$('.edit_search').first().submit()" %><br />
<% end %>
</p>
<table class="list-table">
  <tr>
  	<th class="0" >Bezeichnung</th>
    <th class="1" >Für</th>
    <th class="2" >Beginn</th>
    <th class="3" >Ende</th>
    <th class="4" >Kommentar</th>
	<th>&nbsp;</th>
  </tr>

<% @rentals.each do |rental| %>
  <tr class="<%= cycle('odd','even') %>">
    <td><%=h rental.subject %></td>
    <td><%=h rental.user %></td>
    <td><%=h rental.from_date %></td>
    <td><%=h rental.to_date %></td>
    <td><%=h rental.comment %></td>
    <td>
    <%= link_to 'Bearbeiten',  edit_rental_path(rental) %>
    <%= link_to 'Löschen', rental, :confirm => 'Eintrag wird gelöscht', :method => :delete%></td>
  </tr>
<% end %>
</table>

<br />
